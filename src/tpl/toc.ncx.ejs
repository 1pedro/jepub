<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE ncx PUBLIC "-//NISO//DTD ncx 2005-1//EN" "http://www.daisy.org/z3986/2005/ncx-2005-1.dtd">

<ncx version="2005-1" xml:lang="vi" xmlns="http://www.daisy.org/z3986/2005/ncx/">
	<head>
		<meta name="dtb:uid" content="<%= uuid %>" />
		<meta name="dtb:depth" content="2" />
		<meta name="dtb:totalPageCount" content="0" />
		<meta name="dtb:maxPageNumber" content="0" />
	</head>

	<docTitle>
		<text><%= title %></text>
	</docTitle>

	<docAuthor>
		<text><%= author %></text>
	</docAuthor>

	<navMap>
		<navPoint id="title-page" playOrder="1">
			<navLabel>
				<text>Giới thiệu</text>
			</navLabel>
			<content src="OEBPS/title-page.html" />
		</navPoint>
		<navPoint id="table-of-contents" playOrder="2">
			<navLabel>
				<text>Mục lục</text>
			</navLabel>
			<content src="OEBPS/table-of-contents.html" />
		</navPoint>
        <% pages.forEach(function(page, index) { %>
            <navPoint id="page-<%= index %>" playOrder="<%= (index + 3) %>">
                <navLabel>
                    <text><%= page.title %></text>
                </navLabel>
                <content src="OEBPS/page-<%= index %>.html" />
            </navPoint>
        <% }); %>
	</navMap>
</ncx>
