{
  "name": "jepub",
  "version": "2.2.3",
  "description": "Generate simple EPUB books with JavaScript.",
  "main": "lib/jepub.js",
  "scripts": {
    "build": "npm run clean && tsc",
    "clean": "del lib/*",
    "lint": "eslint --ext .ts,.tsx src",
    "typecheck": "tsc --noEmit",
    "validate": "npm run lint && npm run typecheck && npm run build",
    "prepublishOnly": "npm run validate"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lelinhtinh/jEpub.git"
  },
  "keywords": [
    "generator",
    "epub",
    "javascript",
    "browser",
    "library"
  ],
  "author": "lelinhtinh",
  "license": "ISC",
  "files": [
    "lib"
  ],
  "bugs": {
    "url": "https://github.com/lelinhtinh/jEpub/issues"
  },
  "homepage": "https://lelinhtinh.github.io/jEpub/",
  "dependencies": {
    "image-type": "^4.1.0",
    "jest": "^27.0.6",
    "jszip": "^3.6.0",
    "prettier": "^2.3.1",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@babel/core": "^7.14.5",
    "@babel/eslint-parser": "^7.14.5",
    "@babel/eslint-plugin": "^7.14.5",
    "@types/jszip": "^3.4.1",
    "@types/uuid": "^8.3.4",
    "@typescript-eslint/eslint-plugin": "^4.26.1",
    "@typescript-eslint/parser": "^4.26.1",
    "assert": "^2.0.0",
    "del-cli": "^4.0.0",
    "eslint": "^7.28.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-jest": "^24.3.6",
    "eslint-plugin-jest-dom": "^3.9.0",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-react": "^7.24.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "eslint-plugin-sort-destructure-keys": "^1.3.5",
    "eslint-plugin-testing-library": "^4.6.0",
    "eslint-plugin-typescript-sort-keys": "^1.6.0",
    "husky": "^4.3.8",
    "repo-tools": "^0.2.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "repo-tools check-remote && npm run validate",
      "post-merge": "repo-tools install-packages"
    }
  },
  "typings": "lib/jepub"
}
